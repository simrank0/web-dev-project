<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <button class="btn btn-lg btn-primary">
            <a class="text-light nav-link" href="/campgrounds/new">Add new campground</a>
        </button>
    </header>
    
    <div class="row">
        <% campgrounds.forEach((camps)=>{ %>
            <div class="col-md-3 col-sm-6">
                <div class="card text-center">
                    <img class="card-img-top img0" src=" <%= camps.image %> " alt="campground">
                    <div class="card-body">
                        <h5 class="card-text">
                            <%= camps.name %> 
                        </h5>
                        <p>
                            <a href="/campgrounds/<%= camps._id %>" class="btn btn-primary"> More Info</a>
                        </p>
                    </div>
                </div>
            </div>
        <%  }) %>
    </div>
    
</div>

<%- include("../partials/footer") %>