<%- include("../partials/header") %>

<div class="container text-center">
    <h1 class="">Add new comment to <%= campground.name %></h1>

    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <input class="form-control mb-1 col-sm-4 mx-auto mt-4" type="text" name="comments[text]" placeholder="Comment" required>
        <button class="btn btn-primary btn-lg btn-block col-sm-4 mx-auto">Submit</button>
    </form>

    <a class="nav-link" href="/campgrounds">Go Back</a>
</div>

